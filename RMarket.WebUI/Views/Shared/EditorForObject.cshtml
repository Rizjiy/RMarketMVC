@model KeyValuePair<string,object>

@if (Model.Value.GetType() == typeof(bool))
{
    string isChecked = (bool)Model.Value ? "checked=checked" : "";
    <input id="@Model.Key" name=@Model.Key type="checkbox" value="true" @isChecked class="form-control">
    <input name=@Model.Key type="hidden" value="false">
}
else
{
    <input type="text" id="@Model.Key" name="@Model.Key" value="@Model.Value" class="form-control"/>
}