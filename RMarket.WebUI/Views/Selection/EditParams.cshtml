@using RMarket.ClassLib.Models;
@model List<ParamSelection>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Name")
            </th>
            <th>
                @Html.DisplayName("Value min")
            </th>
            <th>
                @Html.DisplayName("Value max")
            </th>
            <th>
                @Html.DisplayName("Description")
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count(); i++)
        {
            <tr>
                <td>
                    @Html.Label(Model[i].DisplayName)
                    @Html.HiddenFor(m => m[i].FieldName)
                    @Html.HiddenFor(m => m[i].DisplayName)
                </td>
                <td>
                    @Html.EditorFor(m => m[i].ValueMin)
                </td>
                <td>
                    @Html.EditorFor(m => m[i].ValueMax)
                </td>
                <td>
                    @Html.Label(Model[i].Description)
                    @Html.HiddenFor(m => m[i].Description)
                    @Html.HiddenFor(m => m[i].TypeName)
                </td>
            </tr>
        }
    </tbody>
</table>